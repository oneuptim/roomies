<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">

    <%= link_to "Sign Up with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-primary" %>
    <%= link_to "Sign Up with Google", user_google_oauth2_omniauth_authorize_path, class: "btn btn-primary" %>
    
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= render 'shared/devisemes' %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, :class => "form-control", :placeholder => "Full Name" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email" %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Confirm Password" %>
      </div>

      <div class="actions">
        <%= f.submit "Complete Registration", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
