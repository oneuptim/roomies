<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listing", rooms_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Trips", trips_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listings
      </div>
      <div class="panel-body">
        <% @rooms.each do |room| %>
          <div class="row">
            <div class="col-md-2">
              <%= link_to (image_tag room.photos[0].image.url(:thumb)), room_path(room) if room.photos.length > 0 %>
            </div>
            <div class="col-md-7">
              <h4><%= link_to room.listing_name, room_path(room) %></h4>
            </div>
            <div class="col-md-3 right">
              <%= link_to "Update", edit_room_path(room), class: "btn btn-success" %>
            </div>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
