<div class="row">
	<div class="col-md-3">
		<div class="center">
			<div class="sidebar-list">
				<%= image_tag @user.profile_pic.url(:medium) %>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading"><%= @user.fullname %></div>
			<div class="panel-body">

						<%=  %>



				<% if @user != current_user %>
				<%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'posts', class: "btn btn-success profile_pic" %><br>
				<% end %>

				<%= @user.email %><br>
				<%= @user.phone_number %><br>

			<% if @user == current_user%>
				<hr>
				<%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-default" %>
			<% end %>
			</div>
		</div>
	</div>



		<div class="col-md-9">
			<h2>Bio</h2>
			<div class="description row-space-3">
				<%= @user.description %>
			</div>
			<hr>
			<h4>Listings (<%= @rooms.length %>)</h4><br>
			<div class="row">
				<% @rooms.each do |room| %>
				 <div class="col-md-4">
					 <div class="panel panel-default">
						 <div class="panel-heading preview">
							 <%= link_to (image_tag room.photos[0].image.url(:medium)), room %>
						 </div>
						 <div class="panel-body">
							 <%= link_to room.listing_name, room %>
						 </div>

					 </div>

				 </div>
				<% end %>
			</div>



	</div>
</div>
